<%- include('header') -%>

<div class="container">
    <% posts.forEach(function(post) { %>
        <div class="post">
            <h1><%= post.title  %></h1>
            <p>
                <%= post.content.substr(0, 100) + " ..." %>
                <a href="/posts/<%= post._id %>">Read More</a>
            </p>
        </div>
    <% }) %>
</div>




